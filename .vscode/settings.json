{
    // Tự động format khi lưu file
    "editor.formatOnSave": true,

    // Chọn trình định dạng cho C++
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },

    // Bật tab size cố định (nên thống nhất 4 hoặc 2 spaces)
    "editor.tabSize": 4,
    "editor.insertSpaces": true,

    // Cấu hình chuẩn format C++ theo Google hoặc LLVM
    "C_Cpp.clang_format_style": "Google"
}